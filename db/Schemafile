# frozen_string_literal: true

# -*- mode: ruby -*-
# vi: set ft=ruby :

create_table :users, force: :cascade do |t|
  t.string :name, null: false
end

create_table :tweets, force: :cascade do |t|
  t.references :user, null: false, foreign_key: true
  t.string :content, null: false
  t.timestamps
end
